---
// src/components/IconLink.astro
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  ariaLabel: string; // For accessibility
  title?: string; // Optional visible title
}

const { href, ariaLabel, title, class: className, ...rest } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={ariaLabel}
  class:list={[
    "flex flex-col items-center gap-[0.3rem] p-2 text-center hover:text-blue-600 dark:hover:text-blue-400 transition-colors",
    className,
  ]}
  {...rest}
>
  <slot />
  {title && <span class="text-accentColor font-medium">{title}</span>}
</a>
